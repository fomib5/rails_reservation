<div class = "container-fiuld room">
  <h4 class = "pb-4">検索結果：<%= @result %></h4>
  <div class = "row">
    <% @rooms.each do |room| %>
      <div class = "col-sm-6 col-lg-4 col-xl-3">
        <div class = "room-frame-inner">
          <a href = "/rooms/<%= room.id %>">
            <div class = "room-image-out">
              <% if room.room_image? %>
                <img class = "room-image" src = "<%= room.room_image %>">
              <% else %>
                <img class = "room-image" src = "/assets/room_default.png">
              <% end %>
            </div>
            <div class = "room-profile">
              <p class = "room-profile-name"><%= room.name %></p>
              <p class = "room-profile-city"><%= room.address %></p>
              <p class = "room-profile-price price-icon">
                <%= room.price %>
              </p>
            </div>
          </a>
        </div>
      </div>
    <% end %>
  </div>
</div>