<div class = "container room-show">
  <div class = "row">
    <div class = "col-md-8">
      <% if @room.room_image? %>
        <img class = "room-show-image" src = "<%= @room.room_image %>">
      <% else %>
        <img class = "room-show-image" src = "/assets/room_default.png">
      <% end %>
      <div class = "room-show-detile">
        <div class = "room-show-detile-icon">
          <a href = "<%= @room.id %>">
            <% if @user.image? %>
              <img class = "host-icon" src = "<%= @user.image %>">
            <% else %>
              <img class = "host-icon" src = "/assets/default.png">
            <% end %>
          </a>
        </div>
        <div class = "room-show-profile">
          <p class = "room-show-profile-name">
            <%= @room.name %>
          </p>
          <p class = "room-show-profile-address">
            <%= @room.address %>
          </p>
        </div>
      </div>
      <p class = "room-show-detile-content">
        <%= @room.introduction %>
      </p>
    </div>
    <div class = "col-md-4">
      <div class = "room-show-nav">
        <h5 class = "price-icon">
          <%= @room.price %> / 日
        </h5>
        <div class = "room-show-date-select">
          <%= form_for @reservation, method: :post, url: reservations_confirm_path do |f| %>
            <%= f.label :start_date, "開始日" %>
            <%= f.date_field :start_date, class: "form-control mb-4" %>
            <%= f.label :end_date, "開始日" %>
            <%= f.date_field :end_date, class: "form-control mb-4" %>
            <%= f.label :persons, "人数" %>
            <%= f.number_field :persons, class: "form-control mb-4" %>
            <%= f.hidden_field :room_id, value: @room.id %>
            <%= f.submit "予約する", class: "btn btn-primary form-control" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>